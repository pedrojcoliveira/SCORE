            <div class="suplente" id="suplente-4">15</div>
        </div>
    </main>
</body>

<script>
    // Obter todos os elementos dos jogadores e suplentes
    const jogadores = document.querySelectorAll('.pos');
    const suplentes = document.querySelectorAll('.suplente');

    // Variável para contar o número de substituições
    let numSubstituicoes = 0;

    // Adicionar event listener para cada jogador
    jogadores.forEach(jogador => {
      jogador.addEventListener('click', () => {
        // Armazenar informações do jogador selecionado
        const jogadorSelecionado = jogador.innerText;

        // Verificar se o número de substituições excedeu 3
        if (numSubstituicoes <= 3) {
          // Adicionar event listener para cada suplente
          suplentes.forEach(suplente => {
            suplente.addEventListener('click', () => {
              // Armazenar informações do suplente selecionado
              const suplenteSelecionado = suplente.innerText;

              // Atualizar informações do jogador e do suplente
              jogador.innerText = suplenteSelecionado;
              suplente.innerText = jogadorSelecionado;

              // Incrementar o contador de substituições
              numSubstituicoes++;

              // Verificar se o número de substituições excedeu 3
              if (numSubstituicoes > 3) {
                // Desativar todos os event listeners
                jogadores.forEach(jogador => jogador.removeEventListener('click'));
                suplentes.forEach(suplente => suplente.removeEventListener('click'));

                // Mostrar notificação temporária
                const notificacao = document.createElement('div');
                notificacao.innerText = 'Você excedeu o número máximo de substituições.';
                notificacao.style.position = 'fixed';
                notificacao.style.top = '0';
                notificacao.style.right = '0';
                notificacao.style.backgroundColor = '#ff0000';
                notificacao.style.color = '#ffffff';
                notificacao.style.padding = '10px';
                document.body.appendChild(notificacao);
                setTimeout(() => {
                  document.body.removeChild(notificacao);
                }, 3000);
              }
            });
          });
        } else {
          // Mostrar notificação temporária
          const notificacao = document.createElement('div');
          notificacao.innerText = 'Você excedeu o número máximo de substituições.';
          notificacao.style.position = 'fixed';
          notificacao.style.top = '0';
          notificacao.style.right = '0';
          notificacao.style.backgroundColor = '#ff0000';
          notificacao.style.color = '#ffffff';
          notificacao.style.padding = '10px';
          document.body.appendChild(notificacao);
          setTimeout(() => {
            document.body.removeChild(notificacao);
          }, 3000);
        }
      });
    });


</script>


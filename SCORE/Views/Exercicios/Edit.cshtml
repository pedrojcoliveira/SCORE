@model SCORE.Models.Exercicio

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-white">Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdExercicio" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label text-white"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger text-white"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label text-white"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger text-white"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEntrega" class="control-label text-white"></label>
                <input asp-for="DataEntrega" class="form-control" />
                <span asp-validation-for="DataEntrega" class="text-danger text-white"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-white">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
